@page
@model Razorpages.Pages.Blogs.GetPost
@{
    ViewData["Title"] = "GetPost";
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Add Blog Post</h1>
    </div>
</div>

<div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>ShortDescription</td>
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model.BlogPosts)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>@blogPost.ShortDescription</td>
                        <td><a href="/Blogs/EditPost/@blogPost.Id">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>